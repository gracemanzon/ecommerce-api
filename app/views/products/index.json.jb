@products.map do |product|
  {
    id: product.id,
    name: product.name,
    price: product.price,
    image_url: product.image_url,
    description: product.description,
    inventory: product.inventory,
    supplier_id: product.supplier_id,
    created_at: product.created_at,
    updated_at: product.updated_at,
  }
end
